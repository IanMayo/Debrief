<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.mwc.cmap.narrative"
   name="Narrative Viewer"
   version="1.0.1"
   provider-name="MWC"
   class="org.mwc.cmap.narrative.NarrativePlugin">

   <runtime>
      <library name="NarrativeViewer.jar"/>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.mwc.cmap.legacy"/>
      <import plugin="org.mwc.cmap.core"/>
      <import plugin="org.mwc.debrief.legacy"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.ide"/>
   </requires>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="Narrative Viewer"
            icon="icons/sample.gif"
            category="org.mwc.cmap.plotViewer.CMAP"
            class="org.mwc.cmap.narrative.views.NarrativeView"
            id="org.mwc.cmap.narrative.views.NarrativeView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.mwc.cmap.Viewers.views.NarrativeView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
