<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.mwc.cmap.core"
   name="CMap Core Resources Plug-in"
   version="1.0.1"
   provider-name="MWC"
   class="org.mwc.cmap.core.CorePlugin">

   <runtime>
      <library name="cmap_core.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.junit"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.mwc.cmap.legacy" export="true"/>
      <import plugin="org.mwc.debrief.legacy"/>
   </requires>

  <extension
        point="org.eclipse.ui.preferencePages">
     <page
           class="org.mwc.cmap.core.preferences.VPFPrefsPage"
           id="org.mwc.cmap.core.preferences.VPFPrefsPage"
           name="VPF Data storage"/>
  </extension>
  <extension
        point="org.eclipse.core.runtime.preferences">
     <initializer class="org.mwc.cmap.core.preferences.VPFPrefsPage.VPFPreferenceInitializer"/>
  </extension>

</plugin>
