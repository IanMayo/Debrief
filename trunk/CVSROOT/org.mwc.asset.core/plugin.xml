<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="ASSET"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="AssetNG">
         <property
               name="windowImages"
               value="platform:/plugin/org.mwc.debrief.core/icons/icon.gif">
         </property>
         <property
               name="aboutText"
               value="Welcome to Debrief NG, from the Maritime Warfare Centre">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/org.mwc.debrief.core/icons/new_logo2.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.mwc.asset.core.ASSETPerspectiveFactory"
            icon="icons/components.png"
            id="org.mwc.asset.core.Perspective"
            name="Tactical Simulation"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.mwc.asset.core.simulation.category"
            name="Tactical Simulation"/>
   </extension>

</plugin>
