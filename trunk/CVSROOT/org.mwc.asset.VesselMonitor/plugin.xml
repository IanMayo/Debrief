            name="Vessel Monitor"
            icon="icons/sample.gif"
            category="org.mwc.asset.core.simulation.category"
            class="org.mwc.asset.vesselmonitor.views.VesselMonitor"
            id="org.mwc.asset.vesselmonitor.views.VesselMonitor">
      </view>
