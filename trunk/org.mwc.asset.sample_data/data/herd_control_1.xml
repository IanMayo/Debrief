<?xml version="1.0" encoding="UTF-8"?>
<ScenarioController xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:///D:/Dev/Asset/src/schemas/ASSET.xsd" OutputDirectory="c:\temp\asset_herding_out">
	<ScenarioGenerator>
		<MultiScenarioGenerator NameTemplate="sm_scenario" Number="3">
			<VarianceList>
				<Variance name="num stops" id="//WorkingTransit">
					<Attribute name="NumStops">
						<Range min="3" max="12" format="0" step="1"/>
					</Attribute>
				</Variance>
			</VarianceList>
		</MultiScenarioGenerator>
		<MultiParticipantGenerator>
			<ParticipantVariance name="TGT" number="5">
				<Variance name="SSK_Speed" id="/RectangleWander/Speed">
					<Attribute name="Value">
						<Range min="3" max="8" step="0.5"/>
					</Attribute>
				</Variance>
				<Variance name="SSK_Course" id="Status">
					<Attribute name="Course">
						<Range min="0" max="360" step="1"/>
					</Attribute>
				</Variance>
				<Variance name="SSK Posture" id="Switch">
					<Attribute name="Index">
						<Choice>
							<Value value="1"/>
							<Value value="2"/>
						</Choice>
					</Attribute>
				</Variance>
				<ParticipantLocation>
					<WorldArea>
						<TopLeft>
							<relativeLocation>
								<North Units="nm" Value="60"/>
								<East Units="nm" Value="0"/>
							</relativeLocation>
						</TopLeft>
						<BottomRight>
							<relativeLocation>
								<North Units="nm" Value="0"/>
								<East Units="nm" Value="120"/>
							</relativeLocation>
						</BottomRight>
					</WorldArea>
				</ParticipantLocation>
			</ParticipantVariance>
		</MultiParticipantGenerator>
	</ScenarioGenerator>
	<ObserverList>
		<TrackPlotObserver Name="produce plot" Active="true" show_positions="false" image_height="400" image_width="400" file_name="herding_plot.png" only_final_positions="true">
			<GridDelta Units="nm" Value="5"/>
		</TrackPlotObserver>
		<DebriefReplayObserver Name="Record Debrief plot" Active="true" record_detections="false" record_decisions="true" record_positions="true"/>
		<TimeObserver Name="stop after couple of hours" Active="true">
			<Duration Units="hours" Value="8"/>
		</TimeObserver>
		<StopOnProximityDetectionObserver Name="Red kill blue" Active="false">
			<Target>
				<TargetType>
					<Type Name="BLUE"/>
					<Type Name="SUBMARINE"/>
				</TargetType>
			</Target>
			<Watch>
				<TargetType>
					<Type Name="RED"/>
					<Type Name="SUBMARINE"/>
				</TargetType>
			</Watch>
			<Range Units="nm" Value="3"/>
		</StopOnProximityDetectionObserver>
	</ObserverList>
</ScenarioController>