<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:com.planetmayo.debrief.satc.gwt.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:contribution="urn:import:com.planetmayo.debrief.satc.gwt.client.contributions">
	<ui:style>
		.grid {
			border-color: white;
			margin: 5px 0px;
			background: #FAFAFA;
		}
		
		.grid-header {
			color: white;
			background: -moz-linear-gradient(top, rgba(181, 189, 200, 1) 0%,
				rgba(130, 140, 149, 1) 36%, rgba(40, 52, 59, 1) 100% );
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, rgba(181,
				189, 200, 1) ), color-stop(36%, rgba(130, 140, 149, 1) ),
				color-stop(100%, rgba(40, 52, 59, 1) ) );
			background: -webkit-linear-gradient(top, rgba(181, 189, 200, 1) 0%,
				rgba(130, 140, 149, 1) 36%, rgba(40, 52, 59, 1) 100% );
			background: -o-linear-gradient(top, rgba(181, 189, 200, 1) 0%,
				rgba(130, 140, 149, 1) 36%, rgba(40, 52, 59, 1) 100% );
			background: -ms-linear-gradient(top, rgba(181, 189, 200, 1) 0%,
				rgba(130, 140, 149, 1) 36%, rgba(40, 52, 59, 1) 100% );
			background: linear-gradient(to bottom, rgba(181, 189, 200, 1) 0%,
				rgba(130, 140, 149, 1) 36%, rgba(40, 52, 59, 1) 100% );
			filter: progid:  DXImageTransform.Microsoft.gradient( 
				startColorstr= 
				'#b5bdc8', endColorstr=  '#28343b', GradientType= 
		
				0 );
		}
		
		.solutions-lo {
			border: 1px solid #CCC;
			border-radius: 10px;
			margin: 5px;
			position: absolute;
			left: 0px;
			right: 0px;
			top: 0px;
			box-shadow: 2px 2px 2px #E4E4E4;
		}
		
		.header {
			border-bottom: solid 1px #BDBDBD;
			padding: 2px;
			color: #333;
			background: whiteSmoke;
			font-weight: bold;
			border-top-left-radius: 10px;
			border-top-right-radius: 10px;
		}
		
		.content {
			padding: 10px;
		}
		
		.checkbox-panel {
			float: left;
		}
		
		.dropdown-panel {
			float: right;
		}
		
		.checkBox {
			display: block;
		}
		
		.gwt-Anchor {
			color: black;
			cursor: pointer;
		}
		
		.gwt-Anchor:HOVER {
			color: black;
		}
		
		.header-table {
			padding-left: 30px;
		}
		
		.add {
			float: right;
			display: block;
			clear: both;
			margin: 5px 0px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.solutions-lo}">
		<g:Label text="Manage Contributions" styleName="{style.header}"
			horizontalAlignment="center"></g:Label>

		<g:HTMLPanel styleName="{style.content}">
			<g:CaptionPanel captionText="Preferences">
				<g:HTMLPanel>
					<g:HTMLPanel styleName="{style.checkbox-panel}">
						<g:CheckBox text="Display bounded states" styleName="{style.checkBox}"
							checked="true"></g:CheckBox>
						<g:CheckBox text="Display solutions" styleName="{style.checkBox}"
							checked="true"></g:CheckBox>
					</g:HTMLPanel>

					<g:HTMLPanel styleName="{style.dropdown-panel}">
						<g:InlineLabel text="Precision"></g:InlineLabel>
						<g:ListBox>
							<g:item value='1'>Fine</g:item>
							<g:item value='2'>Medium</g:item>
							<g:item value='3'>Coarse</g:item>
						</g:ListBox>
					</g:HTMLPanel>
				</g:HTMLPanel>
			</g:CaptionPanel>

			<g:CaptionPanel captionText="Vehicle">
				<g:HTMLPanel>
					<g:ListBox>
						<g:item value='1'>UK Cross Channel Ferry</g:item>
						<g:item value='1'>UK Tanker</g:item>
						<g:item value='1'>FRA Tanker</g:item>
					</g:ListBox>
				</g:HTMLPanel>
			</g:CaptionPanel>

			<g:CaptionPanel captionText="Analyst Contributions">
				<g:HTMLPanel ui:field="analystContributions">
					<g:HorizontalPanel horizontalAlignment="center"
						ui:field="header" width="100%" styleName="{style.header-table}">
						<g:Anchor ui:field="active" text="Active" styleName="{style.gwt-Anchor}"></g:Anchor>
						<g:Anchor ui:field="hardConstraints" text="Hard Constraints"
							styleName="{style.gwt-Anchor}"></g:Anchor>
						<g:Anchor ui:field="estimate" text="Estimate" styleName="{style.gwt-Anchor}"></g:Anchor>
						<g:Anchor ui:field="weighting" text="Weighting"
							styleName="{style.gwt-Anchor}"></g:Anchor>
					</g:HorizontalPanel>

				</g:HTMLPanel>

			</g:CaptionPanel>

			<g:Button text="Add >" ui:field="add" styleName="gwt-Button {style.add}"></g:Button>

			<g:CaptionPanel captionText="Candidate Solutions">
				<g:HTMLPanel>
					<g:Button text="Generate" styleName="gwt-Button "></g:Button>

					<g:Grid styleName="{style.grid}" borderWidth="1"
						cellPadding="4" cellSpacing="0" width="100%">
						<g:row styleName="{style.grid-header}">
							<g:customCell styleName="header">
								<g:Label>ID</g:Label>
							</g:customCell>
							<g:customCell styleName="header">
								<g:Label>MoE</g:Label>
							</g:customCell>
							<g:customCell styleName="header">
								<g:Label>Export</g:Label>
							</g:customCell>
						</g:row>
						<g:row>
							<g:cell>
								<div>1233</div>
							</g:cell>
							<g:cell>
								<div>11</div>
							</g:cell>
							<g:customCell>
								<g:Button>Export</g:Button>
							</g:customCell>
						</g:row>
						<g:row>
							<g:cell>
								<div>1424</div>
							</g:cell>
							<g:cell>
								<div>45</div>
							</g:cell>
							<g:customCell>
								<g:Button>Export</g:Button>
							</g:customCell>
						</g:row>
						<g:row>
							<g:cell>
								<div>1754</div>
							</g:cell>
							<g:cell>
								<div>23</div>
							</g:cell>
							<g:customCell>
								<g:Button>Export</g:Button>
							</g:customCell>
						</g:row>
					</g:Grid>

				</g:HTMLPanel>
			</g:CaptionPanel>

		</g:HTMLPanel>

		<g:PopupPanel animationEnabled="true" autoHideEnabled="true"
			visible="false" ui:field="contextMenu" styleName="contextMenu">
			<g:HTMLPanel>
				<g:Label ui:field="courseForecastContribution">Course
					Forecast</g:Label>
				<g:Label ui:field="speedForecast">Speed Forecast</g:Label>
				<g:Label ui:field="locationForecast">Location Forecast</g:Label>
			</g:HTMLPanel>
		</g:PopupPanel>

	</g:HTMLPanel>


</ui:UiBinder> 