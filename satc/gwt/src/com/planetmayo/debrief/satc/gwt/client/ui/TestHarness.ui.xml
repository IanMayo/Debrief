<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.harness-lo {
		border: 1px solid #CCC;
		border-radius: 10px;
		margin: 5px;
		position: absolute;
		left: 0px;
		right: 0px;
		bottom: 0px;
		top:
		0px;
		box-shadow: 2px 2px 2px #E4E4E4;
		}

		.header {
		border-bottom: solid 1px
		#BDBDBD;
		padding: 2px;
		color: #333;
		background: whiteSmoke;
		font-weight:
		bold;
		border-top-left-radius: 10px;
		border-top-right-radius: 10px;
		}

		.content {
		padding: 10px;
		}

		.button-panel {
		position: absolute;
		bottom:
		0px;
		left: 0px;
		right: 0px;
		padding: 5px;
		border-top: 1px solid #CCC;
		}

		.restart {
		float: left;
		}

		.step {
		position: absolute;
		left: 45%;

		}
		.play {
		float: right;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.harness-lo}">
		<g:Label text="Test Harness" horizontalAlignment="center"
			styleName="{style.header}"></g:Label>
			
			<g:HorizontalPanel width="100%" styleName="anchors-panel">
				<g:Anchor text="Clear"></g:Anchor>
				<g:Anchor text="Restart"></g:Anchor>
				<g:Anchor text="Populate short"></g:Anchor>
				<g:Anchor text="Populate"></g:Anchor>
				<g:Anchor text="Step"></g:Anchor>
				<g:Anchor text="Play"></g:Anchor>
				<g:Anchor text="Live"></g:Anchor>
				<g:Anchor text="1"></g:Anchor>
				
			</g:HorizontalPanel>

		<g:HTMLPanel styleName="{style.content}">
			<g:InlineLabel text="Data source: "></g:InlineLabel>
			<g:FileUpload></g:FileUpload>
			<g:Button text="Add Bearing Data"></g:Button>
			<g:Button ui:field="populate" text="Populate" styleName="gwt-Button {style.play}"></g:Button>

		</g:HTMLPanel>

		<g:HTMLPanel styleName="{style.button-panel}">
			<g:Button text="&lt;&lt; Restart" styleName="gwt-Button {style.restart}"></g:Button>
			<g:Button text="Step &gt;" styleName="gwt-Button {style.step}"></g:Button>
			<g:Button text="Play &gt;&gt;" stylePrimaryName="gwt-Button {style.play}"></g:Button>
		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder> 