<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:com.planetmayo.debrief.satc.gwt.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<g:CaptionPanel captionText="Bearing Measurement - Spherical BB">

			<g:DisclosurePanel animationEnabled="true" open="true"
				width="100%">

				<g:customHeader>
					<g:HorizontalPanel horizontalAlignment="center"
						ui:field="header" width="100%">
						<g:FlowPanel styleName="disclosurePanel-img"></g:FlowPanel>
						<g:CheckBox ui:field="active"></g:CheckBox>
						<g:InlineLabel ui:field="hardConstraints" text="4 degs error"></g:InlineLabel>
						<g:InlineLabel ui:field="estimate" text="45 Measurements"></g:InlineLabel>
						<my:NumberSpinner ui:field="weighting"></my:NumberSpinner>
					</g:HorizontalPanel>

				</g:customHeader>

				<g:HTMLPanel styleName="detail-panel">
					<g:CaptionPanel captionText="Adjust">
						<g:HTMLPanel>
							<g:Label text="Name:">
							</g:Label>
							<g:TextBox></g:TextBox>

							<g:Label text="Start:">
							</g:Label>
							<dp:DateBox />

							<g:Label text="Finish:">
							</g:Label>
							<dp:DateBox />

							<g:InlineLabel text="Limit: +/- 3 degs">
							</g:InlineLabel>
							<my:Slider2Bar has2Knobs="false"></my:Slider2Bar>
						</g:HTMLPanel>
					</g:CaptionPanel>
				</g:HTMLPanel>

			</g:DisclosurePanel>

		</g:CaptionPanel>
	</g:HTMLPanel>
</ui:UiBinder> 